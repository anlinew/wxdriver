/* pages/editInfo/editInfo.wxss */
.flex{
    display: flex;
    justify-content: center;
}
.block{
    margin-bottom: 20rpx;
    padding: 20rpx 30rpx;
    background-color: #fff;
}
.item{
    font-size: 28rpx;
    line-height: 60rpx;
    /* margin-bottom: 20rpx; */
}
.item.inline {
    position: relative;
    padding-left: 150rpx;
    margin-bottom: 0;
}
.item.inline .item-name{
    position: absolute;
    top: 0;
    left: 0;
    width: 130rpx;
    white-space: nowrap;
    overflow: hidden;
}

.weui-cell__bd{
    position: relative;
}
.weui-cell__bd .logo-clear{
    position: absolute;
    top: 12rpx;
    right: 0;
    width: 36rpx;
    height: 36rpx;
}
.weui-cell__bd .logo-clear .img{
    width: 100%;
    height: 100%;
}
.weui-input{
    height: 60rpx;
    min-height: 60rpx;
    line-height: 60rpx;
}
.confirm-btn{
    height: 90rpx;
    line-height: 90rpx;
    font-size: 36rpx;
    color: #fff;
    margin: 60rpx;
    background: #3982ff !important;
    border-radius: 45rpx;
}