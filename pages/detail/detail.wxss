/* pages/detail/detail.wxss */
.header {
  display: flex;
  position: relative;
  font-family: '微软雅黑';
  width: 100%;
  padding: 10px 0;
  padding-bottom: 50rpx;
  justify-content: center;
  background: #2D99EE;
  background-image: -webkit-linear-gradient(top, #2D99EE, #338AF1);
  background-image: -moz-linear-gradient(top, #2D99EE, #338AF1);
  background-image: -ms-linear-gradient(top, #2D99EE, #338AF1);
  background-image: -o-linear-gradient(top, #2D99EE, #338AF1);
  background-image: linear-gradient(to bottom, #2D99EE, #338AF1);
  color: #fff;
  text-align:center;
}
.header .site{
  font-size: 28rpx;
}
.header .mileage {
  position: relative;
  min-width: 134rpx;
  margin: 0 30rpx;
}
.header .mileage .name{
  font-size: 28rpx;  
}
.header .mileage .line{
  position: absolute;
  left: 0;
  bottom: 40rpx;
  width: 134rpx;
  height: 11rpx;
}
.info-box{
    background-color: #fff;
}
.info-box .item{
    position: relative;
    padding: 20rpx 30rpx 20rpx 160rpx;
    border-bottom: 1px solid #dcdcdc;
    font-size: 28rpx;
    line-height: 60rpx;
}
.info-box .item:last-child{
    border-bottom: 1px solid #bfbfbf;
}
.info-box .item .item-name{
    position: absolute;
    left: 30rpx;
    top: 20rpx;
}
.finish {
  color: #f00;
}
.check-btn{
    height: 90rpx;
    line-height: 90rpx;
    font-size: 36rpx;
    color: #fff;
    margin: 60rpx;
    margin-top: 180rpx;
    background: #3982ff !important;
    border-radius: 45rpx;
}