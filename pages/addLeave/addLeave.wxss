.container {
  /* position: relative; */
  font-family: '微软雅黑';
}
.header {
  display: -webkit-flex;
  display: flex;
  /* position: relative; */
  width: 100%;
  /* justify-content: center; */
  color: #fff;
  text-align:center;
  height: 100%;
}
.inputCont {
  font-size: 24rpx;
  text-align: left;
  color: black;
  width: 100%;
  position: absolute;
  overflow: hidden;
}
.remarkCont{
  padding: 20rpx 20rpx 10rpx 20rpx;
  background: rgb(249, 250, 250);
}
.remarkInput {
  margin-top: 20rpx;
  min-height: 100rpx;
}
textarea{
  width: 100%;
}
.addNav{
  display: block;
  width: 100%;
  margin: 0 auto;
  position: fixed;
  bottom: 50rpx;
}
.check-btn{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #fff;
  background: #3982ff !important;
  border-radius: 45rpx;
  width: 630rpx;
}
.appNum {
  background: rgb(249, 250, 250);
  height: 50rpx;
  line-height: 50rpx;
  padding: 20rpx;
  border-bottom: 1px solid #d7d7d7;
}
.appNum view {
  height: 50rpx;
  line-height: 50rpx;
  float: left;
}
.appNum input {
  display: inline-block;
  height: 50rpx;
  line-height: 50rpx;
}
.type-text {
  height: 60rpx;
  line-height: 60rpx;
  padding: 20rpx 0 20rpx 20rpx;
  border-bottom: 1px solid #d7d7d7;
  background: rgb(249, 250, 250);
}
.type-btn {
  height: 60rpx;
  line-height: 60rpx;
  padding: 20rpx 0 20rpx 20rpx;
  background: rgb(249, 250, 250);
  margin-bottom: 20rpx;
}
.type-item {
  display: inline-block;
  border-radius: 40rpx;
  width: 130rpx;
  background: #ebf0fa;
  text-align: center;
  padding: 15rpx;
}
.quckReason {
  background: rgb(249, 250, 250);
  padding: 40rpx 20rpx;
}
.reason-item {
  display: inline-block;
  border-radius: 40rpx;
  background: #ebf0fa;
  text-align: center;
  padding: 15rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
}
.blueGround{
  background: #3e85ff!important;
  color: #fff!important;
}
.time-text{
  width: 200rpx;
}
.picker{
  width: 300rpx;
  height: 60rpx;
}