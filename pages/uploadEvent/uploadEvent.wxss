.container {
  position: relative;
  font-family: '微软雅黑';
}
.header {
  display: flex;
  position: relative;
  width: 100%;
  padding: 10px 0;
  padding-bottom: 130rpx;
  justify-content: center;
  background: #2D99EE;
  background-image: -webkit-linear-gradient(top, #2D99EE, #338AF1);
  background-image: -moz-linear-gradient(top, #2D99EE, #338AF1);
  background-image: -ms-linear-gradient(top, #2D99EE, #338AF1);
  background-image: -o-linear-gradient(top, #2D99EE, #338AF1);
  background-image: linear-gradient(to bottom, #2D99EE, #338AF1);
  color: #fff;
  text-align:center;
}
.mileage {
  position: relative;
  min-width: 134rpx;
  margin: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.site {
  height: 60rpx;
}
.site .name {
  height: 60rpx;
  line-height: 60rpx;
}
.mileage .name{
  font-size: 26rpx;  
  position: absolute;
  top: 0;
  height: 20rpx;
  line-height: 20rpx;
  width: 150rpx;
  left: 50%;
  margin-left: -75rpx;
}
.mileage .line{
  position: absolute;
  left: 0;
  top: 50%;
  margin-top: -5.5rpx;
  width: 134rpx;
  height: 11rpx;
}
.mission_num {
  position: absolute;
  width:720rpx;
  margin:0 15rpx;
  left: 0;
  bottom: -60rpx;
  z-index:99;
  border-top-left-radius:12rpx;
  border-top-right-radius:12rpx;
  background: rgb(249, 250, 250);
  font-size: 14px;
  color: #333;
  padding: 20rpx;
  box-sizing: border-box;
}
.mission_num>view {
  text-align: left;
  overflow: hidden;
  font-size: 24rpx;
  color: #333;
  margin-top: 15rpx;
}
.fLeft{
  float: left;
}
.fRight{
  float: right;
}
.inputCont {
  font-size: 24rpx;
  text-align: left;
  color: black;
  width: 100%;
  position: absolute;
  top: 280rpx;
  overflow: hidden;
}
.numCont {
  display: flex;
  flex-direction: row;
  padding: 20rpx 20rpx;
  height: 55rpx;
  border-bottom: 1px solid #ccc;
  background: rgb(249, 250, 250);
}
.numText {
  width: 130rpx;
  height: 100%;
  line-height: 55rpx;
}
.input {
  flex: 1;
  height: 55rpx;
}
.numCont .unit {
  width: 100rpx;
  line-height: 55rpx;
  text-align: right;
}
.remarkCont{
  padding: 20rpx 20rpx 10rpx 20rpx;
  background: rgb(249, 250, 250);
}
.remarkInput {
  margin-top: 20rpx;
  min-height: 100rpx;
}
.upload {
  background: rgb(249, 250, 250);
  margin-top: 20rpx;
  padding: 20rpx 30rpx;
}
.upload .upbox {
  width: 130rpx;
  height: 130rpx;
  border: 1px dashed #666;
  border-radius: 10rpx;
  margin-top: 15rpx;
  text-align: center;
  position: relative;
}
.upbox .icon-camera-b {
  color: #999;
  position: absolute;
  left: 50%;
  width: 50rpx;
  top: 20rpx;
  margin-left: -25rpx;
}
.upbox .upTip{
  position: absolute;
  width: 100rpx;
  top: 70rpx;
  font-size: 20rpx;
  color: #666;
  left: 50%;
  margin-left: -50rpx;
}
.upload_add {
  margin-top: 20rpx;
  display: inline-block;
}
.upload_add .uplogo {
  width: 140rpx;
  height: 140rpx;
}
.hasupload_pic {
  width: 140rpx;
  height: 140rpx;
  display: inline-block;
  position: relative;
  margin-right: 30rpx;
}
.hasupload_pic .hasImg {
  width: 140rpx;
  height: 140rpx;
}
.hasupload_pic .deltel {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  right: -10rpx;
  top: -10rpx;
}
.addNav{
  display: block;
  width: 100%;
  margin: 0 auto;
  position: fixed;
  bottom: 50rpx;
}
.check-btn{
  height: 90rpx;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #fff;
  background: #3982ff !important;
  border-radius: 45rpx;
  width: 630rpx;
}
