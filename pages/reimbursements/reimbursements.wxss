/* pages/reimbursements/reimbursements.wxss */
.container {
  position: relative;
}
.top-info{
    height: 85px;
    margin-bottom: 20rpx;
    background-color: #fff;
    position: fixed;
    z-index: 999;
    width: 100%;
    opacity: 0;
    border-bottom: 1px solid #ccc;
}
.top-info .item {
    position: relative;
    height: 85px;
    padding: 12px 28px;
    line-height: 25px;
    text-align: center;
    box-sizing: border-box;
}
.top-info .item::after{
    display: block;
    position: absolute;
    content: "";
    top: 55rpx;
    right: 0;
    width: 0;
    height: 60rpx;
    border-right: 1px solid #eef3fa;

}
.top-info .item:last-child:after{
    display: none;
}
.top-info .item .num {
    font-size: 26rpx;
}
.top-info .item .num.orange{
    color: #f39800;
}
.top-info .item .num.green{
    color: #14b4b1;
}
.top-info .item .badge {
    display: inline-block;
    padding: 0 20rpx;
    font-size: 26rpx;
    line-height: 40rpx;
    vertical-align: middle;
    color: #fff;
    background-color: #89abda;
    border-radius: 20rpx;
}
.top-info .item .badge.orange{
    background-color: #f39800;
}
.top-info .item .badge.green{
    background-color: #14b4b1;
}
.li{
    margin-bottom: 20rpx;
    background-color: #fff;
    box-shadow: 0 2px 12px 0 rgba(0,0,0,.1);
}
.li .h-t{
    height: 60rpx;
    padding: 10rpx 30rpx;
    border-bottom: 1px solid #eef3fa;
    font-size: 26rpx;
    line-height: 60rpx;
}
.li .p{
    font-size: 26rpx;
    line-height: 60rpx;
}
.li .gray{
    color: #333;
}
.li .red{
    color: #f84a65;
}
.li .orange{
    color: #fff;
    margin-right: 5px;
    height:26rpx;
    line-height:26rpx;
    padding: 6rpx 12rpx;
    border-radius:30rpx;
    font-size:24rpx;
    margin-top: 15rpx;
}
.li .h-c{
    padding: 10rpx 30rpx;
    border-bottom: 1px solid #eef3fa;
}
.li .h-c .p{
    border-bottom: 1px solid #eef3fa;
}
.li .h-c .item{
    font-size: 26rpx;
    line-height: 60rpx;
}
.li .h-c .item .logo-wrap{
    display: inline-block;
    width: 36rpx;
    height: 60rpx;
    margin: 0 12rpx;
    vertical-align: top;
}
.li .h-c .item .logo-wrap .img{
    width: 36rpx;
    height: 36rpx;
    vertical-align: middle;
}
.li .h-c .line-box {
    padding: 20rpx 0;
}
.li .h-c .site{
    height: 100rpx;
    font-size: 26rpx;
    line-height: 50rpx;
    width: 180rpx;
    text-align: center;
}
.li .h-c .site:last-child::after {
    display: none;
}

.li .h-c .site:last-child{
    padding-right: 0
}
.li .h-c .site .site-logo{
    display: inline-block;
    width: 70rpx;
    height: 70rpx;
}
.li .h-c .site .site-logo .img{
    width: 100%;
    height: 100%;
}
.li .h-c .site .time{
    color: #666;
    width: 180rpx;
}
.li .h-c .site .name{
  width: 180rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.li .h-c .site .time.blue{
    color: #3e85ff;
}
.li .h-b{
    height: 60rpx;
    padding: 0 30rpx;
    font-size: 26rpx;
    line-height: 60rpx;
}
.li .h-b .btn{
    display: inline-block;
    height: 60rpx;
    margin-left: 20rpx;
    padding: 0 30rpx;
    border: 1px solid #3e85ff;
    font-size: 26rpx;
    line-height: 60rpx;
    color: #3e85ff;
    border-radius: 32rpx;
    vertical-align: middle;
}
.li .h-b .btn.gray{
    color: #b9b8b8;
    border: 1px solid #e0e0e0;
    background-color: #eee;
}
