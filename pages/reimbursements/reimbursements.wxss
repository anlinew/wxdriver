}
.borderN .borderBox .borderChlid{
  width: 100%;
  height: 100%;
  background: #5aa0f3;
  border-radius: 50%;
  text-align: center;
  line-height: 72px;
  font-size: 18px;
}
.h-last {
  padding: 20rpx 0;
  font-size: 26rpx;
  display: inline-block;
  width: 50%;
}
.site-line {
  flex: 1;
  position: relative;
}
.site-line .line {
  position: absolute;
  top: 50%;
  height: 1px;
  background: #aaaaaa;
  width: 100%;
}
/* 线路样式 */
.route {
  font-size: 26rpx;
  line-height: 60rpx;
  vertical-align: middle;
  padding-left: 40rpx;
  padding-right: 10rpx;
  overflow: hidden;
}
.route .site{
  position: relative;
  margin-bottom: 35rpx;
  font-size: 0;
  line-height: 60rpx;
  text-align: left;
}
.route .site:last-child{
  margin-bottom: 0rpx;
}
.route .site::after{
  display: block;
  position: absolute;
  content: "";
  top: 100%;
  left: 20rpx;
  width: 0;
  height: 40rpx;
  border-right: 1px dashed rgb(214, 214, 214);
}
.route .site:last-child::after{
  display: none;
}
.route .site .img-wrap{
  display: inline-block;
  width: 40rpx;
  height: 60rpx;
  margin-right: 30rpx;
  text-align: center;
  vertical-align: top;
}
.route .site .img-wrap .logo{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.route .site .img-wrap .logo-start, .route .site .img-wrap .logo-end{
  height: 48rpx;
}
.route .site .name{
  margin-right: 30rpx;
  font-size: 26rpx;
  line-height: 60rpx;
}
.route .site .date{
  color: #6d6e72;
  font-size: 26rpx;
}
.delete {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: -15rpx;
  top: -15rpx;
  z-index: 9999;
}
.delete image {
  width: 100%;
  height: 100%;
}
.title{
  text-align: left;
  padding-left: 20rpx;
  font-size: 26rpx;
  margin-bottom: 20rpx;
}